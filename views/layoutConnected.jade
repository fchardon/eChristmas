extends layout

block content
	body(ng-controller='connectedCtrl', ng-init="load(user= #{JSON.stringify(user)})")
		div.nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
			div.container-fluid
				div.navbar-header
					h3.titre: span.navbar-brand.glyphicon.glyphicon-gift
				div.collapse.navbar-collapse
					ul.nav.navbar-nav
						li(ng-Class="getActiveClass('/cadeaux/chardon/{{userName}}')")
							a(href='/cadeaux/chardon/{{userName}}'): span.glyphicon.glyphicon-list-alt: span= 'Liste Cadeaux'
						li(ng-Class="getActiveClass('/lists/chardon/{{userName}}')")
							a(href='/lists/chardon/{{userName}}'): span.glyphicon.glyphicon-pencil: span= 'GÃ©rer Liste'
						li(ng-Class="getActiveClass('/accounts')", ng-show="{{user.isAdmin}}")
							a(href='/accounts'): span.glyphicon.glyphicon-pencil: span= 'Accounts'
						li(ng-Class="getActiveClass('/accounts/{{user.account}}')", ng-show="{{user.isAdmin}}")
							a(href='/accounts/{{user.account}}'): span.glyphicon.glyphicon-pencil: span= 'My Account'
				
					ul.nav.navbar-nav.navbar-right
						//li
						//	span.glyphicon.glyphicon-user.nav-bar-user: span.user {{userName}}
						
						li
							span.glyphicon.glyphicon-remove-circle.nav-bar-user: span.deconnecter(ng-click="deconnecter()") Deconnecter
